# --- lsd ---
alias ls="lsd"
alias lsa="lsd -a"
alias lsl="lsd -l"
alias lsla="lsd -la"
alias lst="lsd --tree"

# --- git ---
alias g="git"
alias ga="git add"
alias gaa="git add --all"
alias gma="git commit -am"
alias gc="git checkout"
alias gp="git push"
alias gpu="git push -u"
alias gb="git branch"
alias gr="git remote -va"
alias gs="git status"

# --- kubectl ---
alias kb="kubectl"
alias kbci="kubectl cluster-info"
alias kba="kubectl get all"
alias kbrm="kubectl get pods --no-headers=true --all-namespaces |sed -r 's/(\S+)\s+(\S+).*/kubectl --namespace \1 delete pod \2/e'"

# --- docker ---
alias d="docker"
alias drm="docker system prune -a -f"

# --- psql ---
alias pg-tw="psql -h 35.232.50.17 -U samcraig -d twitter"

# --- misc. ---
alias kd="kind delete cluster && kind create cluster"
alias code="code-insiders"
